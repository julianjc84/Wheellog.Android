<!--
    AlwaysShowAction lint suppression:
    Android's ActionBarPolicy limits ifRoom items to maxItems=3 and
    widthLimit=half the screen on phones (360dp). With 2 always items
    already consuming those slots, no ifRoom items can ever appear.
    Since this app has no toolbar title or navigation icon, the left
    half of the toolbar is empty â€” using always is the only way to
    show these frequently-used icons.
-->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <item
        android:id="@+id/miSearch"
        app:showAsAction="always"
        android:icon="@drawable/ic_action_bluetooth_searching_white"
        android:title="@string/search_for_wheel"
        tools:ignore="AlwaysShowAction" />
    <item
        android:id="@+id/miWheel"
        app:showAsAction="always"
        android:icon="@drawable/ic_wheel_white_24"
        android:title="@string/connect_to_wheel"
        tools:ignore="AlwaysShowAction" />
    <item
        android:id="@+id/miLogging"
        app:showAsAction="always"
        android:icon="@drawable/ic_action_logging_white"
        android:title="@string/start_data_service"
        tools:ignore="AlwaysShowAction" />
    <item
        android:id="@+id/miWatch"
        app:showAsAction="always"
        android:icon="@drawable/ic_action_watch_white"
        android:title="@string/start_pebble_service"
        tools:ignore="AlwaysShowAction" />
    <item
        android:id="@+id/miBand"
        android:icon="@drawable/ic_mi_med"
        android:title="@string/miband_desc"
        android:visible="false"
        app:showAsAction="always"
        tools:ignore="AlwaysShowAction" />
    <item
        android:id="@+id/miReset"
        android:icon="@drawable/ic_action_reset"
        android:title="@string/reset_extremum_values_title"
        android:visible="false"
        app:showAsAction="always"
        tools:ignore="AlwaysShowAction" />
    <item
        android:id="@+id/miSettings"
        app:showAsAction="always"
        android:icon="@drawable/ic_baseline_settings_24"
        android:title="@string/show_settings"
        tools:ignore="AlwaysShowAction" />
</menu>
